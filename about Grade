/* Creat program: input subject name,test 2 times
if <50 = 0
50-54 =1
55-54 =1.5
60-64 =2
65-69 =2.5
70-74 =3
75-79 =3.5
>80 =4*/

#include<stdio.h>
#include<stdlib.h>
main()
{
	char name_subject[10];
	float test_I;
	float test_II;
	float final;
	printf("Subject:");
	scanf("%s",name_subject);
	printf("Your first score:");
	scanf("%f",&test_I);
	printf("Your second score:");
	scanf("%f",&test_II);
	final=(test_I+test_II);
	if(final<50)
	{
		printf("Grade 0\n");
	}
	else if(final<=54)
	{
		printf("Grade 1\n");
	}
	else if(final<=59)
	{
		printf("Grade  1.5\n");
	}
	else if(final<=64)
	{
		printf("Grade 2\n");
	}
	else if(final<=69)
	{
		printf("Grade 2.5\n");
	}
	else if(final<=74)
	{
		printf("Grade 3\n");
	}
	else if(final<=79)
	{
		printf("Grade 3.5\n");
	}
	else 
	{
		printf("Grade 4\n");
	}
	system("pause");
}
